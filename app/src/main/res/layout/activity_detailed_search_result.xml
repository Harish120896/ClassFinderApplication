<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.admin.classfinder.DetailedSearchResultActivity"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:id="@+id/d_card_view"
        android:layout_weight="0.01">
        <ImageView
            android:id="@+id/d_listview_image"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src = "@drawable/karate"
            android:padding="10dp" />
    </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/d_institute_name__"
        android:layout_width="fill_parent"
        android:layout_gravity="center"
        android:layout_height="45dp"
        android:background="@drawable/edit_text"
        android:paddingLeft="15dp"
        android:text="dup_data"
        android:textColor="#FF4081"
        android:paddingTop="15dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/d_address_"
        android:paddingTop="10dp"
        android:text="dup_data"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text"
        android:textColor="#FF4081"
        android:paddingLeft="15dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/d_contact_"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:text="dup_data"
        android:textColor="#FF4081"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/edit_text"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:layout_marginTop="20dp"/>

</LinearLayout>
